{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "allowJs": true,
    // "paths": {
    //   "@modules/*": ["modules/*"],
    //   "@config/*": ["config/*"],
    //   "@shared/*": ["shared/*"]
    // }, Atalhos para evitar ficar coocando "../../../../"
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  }
}
